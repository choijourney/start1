package chap3;

// 단항 연산자 : 연산자의 피연산자가 한개인 수식

// 1. 증감연산자 : ++, --
// 		++ : 변수에 저장된 값을 1 증가
//		-- : 변수에 저장된 값을 1 감소

public class OpEx1 {

	public static void main(String[] args) {
		int x = 5, y = 5; // 변수를 한번에 여러개 선언가능
		x++;
		y--;
		System.out.printf("x=%d,y=%d\n", x, y); // x=6 , y= 4
		++x;
		--y;
		System.out.printf("x=%d,y=%d\n", x, y); // x=7, y=3

	}

}
